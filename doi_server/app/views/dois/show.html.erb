<p id="notice"><%= notice %></p>

<h1><%= @doi.doi %>'s URL history</h1>

<!-- this table use to be in app/views/urls/index.html.erb -->
<table>
  <thead>
      <tr>
        <th>Course</th>
        <th>Comment</th>
        <th>Rating</th>
        <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @doi.urls.each do |url| %>
      <tr>
        <td><%= url.name %></td>
        <td><%= url.description %></td>
        <td><%= url.url %></td>
        <td><%= link_to 'Edit', edit_url_path(url) %></td>
        <td><%= link_to 'Destroy', url, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to "Edit #{@doi.doi}", edit_doi_path(@doi) %> |
<%= link_to 'Show all DOIs', dois_path %>
