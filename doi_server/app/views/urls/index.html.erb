<!-- the following calls the name() function in the Professor model -->
<h1><%= @doi.doi%>'s Urls </h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Url</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @urls.each do |url| %>
      <tr>
        <td><%= url.name %></td>
        <td><%= url.description %></td>
        <td><%= url.url %></td>
        <td><%= link_to 'Edit', edit_url_path(url) %></td>
        <td><%= link_to 'Destroy', url, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Url', new_doi_url_path %> |
<%= link_to "Back to #{@doi.doi}'s page", doi_path(@doi) %>
