<h1>Kong's DOI generator</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Url</th>
      <th>Doi</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @dois.each do |doi| %>
      <tr>
        <td><%= doi.name %></td>
        <td><%= doi.description %></td>
        <td><%= doi.url %></td>
        <td><%= doi.doi %></td>
        <td><%= link_to 'Show', doi %></td>
        <td><%= link_to 'Edit', edit_doi_path(doi) %></td>
        <td><%= link_to 'Destroy', doi, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= form_tag(query_path, method: "get") do  %>
    <%= label_tag(:query, "Search DOI: ") %>
    <%= text_field_tag(:query) %>
    <%= submit_tag("Lookup") %>
<% end %>

<br>

<%= link_to 'New Doi', new_doi_path %>
