<h1>List of Public Images</h1>

<div class="media">
  <div class="media-body">
  <table class="table table-hover">
    <thead>
      <tr>
        <th>Image</th>
        <th>Public</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @images.each do |image| %>
        <tr>
          <td><%= image_tag root_url + "/images/" + image.filename, size: "100x100", alt: image.filename %></td>

          <td><%= image.public %></td>
          <td><%= link_to 'Show', image, class: 'btn btn-mini' %></td>
          <% if self.current_user %>
          <td><%= link_to 'Edit', edit_image_path(image), class: 'btn btn-mini btn-success' %></td>
          <td><%= link_to 'Destroy', image, class: 'btn btn-mini btn-danger', method: :delete, data: { confirm: 'Are you sure?' } %></td>
          <% end %>
        </tr>
      <% end %>
    </tbody>

  </table>
  </div>
</div>

<br>
<% if current_user %>
<%= link_to 'New Image', new_image_path %>
<% end %>
